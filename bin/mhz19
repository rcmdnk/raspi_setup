#!/usr/bin/env python3
import sys
import serial
import subprocess
import traceback
from tsd2gspread import Tsd2Gspread


class MHZ19(Tsd2Gspread):
    def __init__(self, **kw):
        self.dev = '/dev/serial0'
        self.serial = 'serial0'
        self.baudrate = 9600
        self.cmd = b'\xff\x01\x86\x00\x00\x00\x00\x00\x79'

        super().__init__(**kw)

    def get_data(self):
        subprocess.run(['sudo', 'systemctl', 'stop',
                        'serial-getty@%s.service' % self.serial])

        data = []
        try:
            ser = serial.Serial(self.dev,
                                baudrate=self.baudrate,
                                bytesize=serial.EIGHTBITS,
                                parity=serial.PARITY_NONE,
                                stopbits=serial.STOPBITS_ONE,
                                timeout=1.0)
            ser.write(self.cmd)
            s = ser.read(9)
            if len(s) > 7 and s[0] == 0xff and s[1] == 0x86:
                co2 = s[2] * 256 + s[3]
                temp = s[4] - 40
                tt = s[4]
                ss = s[5]
                uhul = s[6] * 256 + s[7]
                data = [co2, temp, tt, ss, uhul]
                return data
        except Exception:
            print(traceback.format_exc())

        subprocess.run(['sudo', 'systemctl', 'start',
                        'serial-getty@%s.service' % self.serial])
        return []


    def print_data(self):
        now, co2, temp, tt, ss, uhul = self.get_tsd()
        print(f"datetime    : {now}")
        print(f"co2         : {co2:.2f} ppm")
        print(f"temperature : {temp:.2f} degree")
        print(f"tt          : {tt}")
        print(f"ss          : {ss}")
        print(f"uhul        : {uhul}")


if __name__ == '__main__':
    try:
        if len(sys.argv) <= 1:
            MHZ19().print_data()
        else:
            MHZ19(config_file=sys.argv[1]).write()
    except KeyboardInterrupt:
        pass
